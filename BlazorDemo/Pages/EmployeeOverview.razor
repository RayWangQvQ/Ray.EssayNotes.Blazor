@page "/employeeoverview"
@inherits EmployeeOverviewBase

<h3>EmployeeOverview</h3>

<table class="table table-hover table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>部门</th>
            <th>姓名</th>
            <th>出生日期</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Employees)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.DepartmentId</td>
            <td>@item.Name</td>
            <td>@item.BirthDate</td>
            <td>
                <a href="@($"employeedetail/{item.Id}")" class="btn btn-primary btn-sm">Detail</a>
                <a href="@($"employee/{item.Id}")" class="btn btn-primary btn-sm">Edit</a>
            </td>
        </tr>
        }
    </tbody>
</table>
